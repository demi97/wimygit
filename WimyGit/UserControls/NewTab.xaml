<UserControl x:Class="WimyGit.UserControls.NewTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WimyGit.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Grid>
        <ComboBox Text="{Binding Directory}" ItemsSource="{Binding RepositoryList}" IsEditable="True" HorizontalAlignment="Left" Margin="65,220,0,0" VerticalAlignment="Top" Width="253"/>
        <Button Command="{Binding BrowseCommand}" Content="Browse..." HorizontalAlignment="Left" Margin="323,220,0,0" VerticalAlignment="Top" Width="76" Height="22"/>
        <Button Command="{Binding OkayCommand}" Content="OK" HorizontalAlignment="Left" Margin="65,247,0,0" VerticalAlignment="Top" Width="334" Height="59" />
        <Label Content="Type the git directory or browse or drag the git directory here" HorizontalAlignment="Left" Margin="56,179,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
