<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WimyGit" x:Class="WimyGit.MainWindow"
        Icon="../Icon.ico"
        Title="WimyGit"
        WindowState="Maximized"
        Width="1324" Height="800" MinWidth="800" MinHeight="600"
        Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,0">
            <TabControl x:Name="tab_control_"  HorizontalAlignment="Left" Height="800" Margin="0,0,0,0" VerticalAlignment="Top" Width="1016">
                <TabItem Focusable="False" Padding="2" HorizontalAlignment="Left" Width="62" Height="40" Margin="0" VerticalAlignment="Top">
                    <TabItem.Header>
                        <Button Click="OnAddNewTabButtonClick" Width="60" Height="45" Content="+" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="20" />
                    </TabItem.Header>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
