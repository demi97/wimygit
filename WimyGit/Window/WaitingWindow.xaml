<Window x:Class="WimyGit.WaitingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WimyGit"
        mc:Ignorable="d"
        Title="WaitingWindow" Height="100" Width="300" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded" Cursor="Wait" WindowStyle="None">
    <Grid>
        <TextBox x:Name="textBox" Margin="0,30,0,30" Text="Waiting..." TextAlignment="Center" IsReadOnly="True" BorderThickness="0" FontFamily="Consolas" FontSize="20"/>
    </Grid>
</Window>
