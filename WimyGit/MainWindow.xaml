<Window x:Class="WimyGit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="455" Width="525">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="10*" />
      <RowDefinition Height="60*" />
      <RowDefinition Height="30*" />
    </Grid.RowDefinitions>
    <Grid Grid.Row="0">
      <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding Path=Directory}" VerticalAlignment="Top" Width="414"/>
      <Button Content="Button" HorizontalAlignment="Left" Margin="432,0,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Path=ChangeDirectory}" />
    </Grid>
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="20*" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="80*" />
      </Grid.ColumnDefinitions>
      <Grid></Grid>
      <GridSplitter Grid.Column="1" Width="15" HorizontalAlignment="Stretch"/>
      <Grid>
      </Grid>
      <ListBox Grid.Column="2" HorizontalAlignment="Left" Height="77" Margin="10,33,0,0" VerticalAlignment="Top" Width="382"/>
      <Label Content="Staged" Grid.Column="2" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top"/>
      <Label Content="Modified" Grid.Column="2" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top"/>
      <ListBox Grid.Column="2" HorizontalAlignment="Left" Height="103" Margin="10,141,0,0" VerticalAlignment="Top" Width="382"/>
    </Grid>
    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition></ColumnDefinition>
      </Grid.ColumnDefinitions>
      <TextBox HorizontalAlignment="Left" Height="96" TextWrapping="Wrap" Text="{Binding Path=Log}" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Width="517"/>
    </Grid>
  </Grid>
</Window>
